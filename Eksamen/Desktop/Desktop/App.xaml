<Application x:Class="Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Desktop"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <Style x:Key="AnsButtonStyle">
                <Setter Property="Control.Width" Value="75px"/>
                <Setter Property="Control.Height" Value="50px"/>
                <Setter Property="Control.Margin" Value="10px"/>
            </Style>
            
            <BitmapImage x:Key="StarImage" UriSource="Pics/star.png"/>
            
            <Style x:Key="CorrectButtonStyle" BasedOn="{StaticResource AnsButtonStyle}">
                <Setter Property="Button.Background" Value="LightGreen"/>
                <Setter Property="Button.ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Image Source="{StaticResource StarImage}" Width="25px"/>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
